@namespace BlazorFlowly.Components

<Select DataSource="@ChoicesList"
        @bind-Value="@selectedValue"
        Style="@(WidthString())"
        DefaultValue="@ChoicesList[0]"
        Placeholder="Choose"
        EnableSearch
        OnSelectedItemChanged="OnSelectedItemChangedHandler">
</Select>

@code {
    [Parameter]
    public int Width { get; set; } = 120;

    [Parameter]
    public List<string> ChoicesList { get; set; }

    [Parameter]
    public Action<string> SetSelectedString { get; set; }

    private string selectedValue;

    private void OnSelectedItemChangedHandler(string value){
        SetSelectedString.Invoke(selectedValue);
    }

    private string WidthString(){
        return $"width: {Width}px;";
    }
}