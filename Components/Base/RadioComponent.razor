@namespace BlazorFlowly.Components

<RadioGroup OnChange="SetSelectedString" DefaultValue="Possibilities[0]">
    @foreach (string item in Possibilities){
        @if(Helpers != null){
            <AntDesign.Tooltip Placement="@Placement.Bottom" Title="Helpers[Possibilities.IndexOf(item)]">
                <Radio Style="@Style" Value="item">@item</Radio>
            </AntDesign.Tooltip>
        }
        else{
            <Radio Value="item">@item</Radio>
        }
    }
</RadioGroup>

@code {
    [Parameter]
	public List<String> Possibilities { get; set; }

    [Parameter]
    public string Style { get; set; } = "";

    [Parameter]
	public List<String> Helpers { get; set; }

    [Parameter]
    public Action<string> SetSelectedString { get; set; }

    protected override void OnParametersSet(){
        base.OnParametersSet();

        if(Possibilities== null){
            throw new InvalidOperationException("Possibilities is a required parameter");
        }
        if((Helpers != null)&&(Possibilities.Count !=  Helpers.Count)){
            throw new InvalidOperationException("Possibilities and Helpers must have the same size");
        }
    }
}